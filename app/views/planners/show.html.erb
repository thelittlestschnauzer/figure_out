<h1>Here is the Meal Plan: <%= @planner %></h1>

<h2>Meals</h2>

<ul class="planners">
  <% @planner.meals.each do |meal| %>
    <li class="planner">
      <%= meal.date %> - <%= link_to meal.recipe, recipe_path(meal.recipe) %>
    </li>
  <% end %>
</ul>

<div class="actions">
  <ul class="recipe-actions">
    <li>
      <%= link_to 'Edit your Plan', edit_planner_path(@planner) %>
    </li>
    <li>
      <%= link_to 'Delete your Plan', planner_path(@planner), data: { confirm: 'Are you positive you want to delete this plan?' }, method: :delete %>
    </li>
  </ul>
</div>
