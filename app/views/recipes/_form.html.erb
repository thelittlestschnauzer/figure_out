<% if @errors.present? %>
<div class="errors">
  <ul>
    <% @errors.each do |error| %>
      <li><%= error %></li>
    <% end %>
  </ul>
</div>
<% end %>

<%= form_for(@recipe) do |f| %>
  <div class="form-group">
    <%= f.text_field :title, class: 'form-control' %></br>
  </div>
  <div class="form-group">
    <%= f.text_area :description, class: 'form-control' %></br>
  </div>
  <div class="actions">
    <%= f.submit 'Add Recipe', class: 'btn btn-primary' %>
  </div>
  <% end %>
